<!-- ./views/show.handlebars -->
<div class="container py-5">
    <div class="text-center">
        <h1 class="mb-4">{{restaurant.name}}<br>{{restaurant.name_en}}</h1>
        <img class="rounded mb-4" src="{{restaurant.image}}" alt="Card image cap" style="max-height: 300px;">
    </div>
    <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto">
            <p>分類 : {{restaurant.category}}</p>
            <p>地址 : {{restaurant.location}}  <a href="{{restaurant.google_map}}" class="btn btn-info" target="_blank">查看地圖</a></p>
            <p>電話 : {{restaurant.phone}}</p>
            <p>描述 : {{restaurant.description}}</p>
        </div>
    </div>
</div>